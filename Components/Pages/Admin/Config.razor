@page "/configuracion"
@using Radzen.Blazor
@using Radzen
@inherits ConfigBase

@rendermode InteractiveServer

<PageTitle>Configuración</PageTitle>

@if (CurrentUser.Nivel < 5)
{
    <div class="alert alert-warning" role="alert">
        No tiene permisos para acceder a esta página.
    </div>
    return;
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-12">
            <RadzenButton Click=@(() => NavigationManager.NavigateTo("/"))
                         Icon="arrow_back"
                         ButtonStyle="ButtonStyle.Light"
                         class="me-1">
                Regresar
            </RadzenButton>
            <RadzenButton Click=@(() => NavigationManager.NavigateTo("/configuracion/config"))
                         Icon="settings"
                         ButtonStyle="ButtonStyle.Light"
                         class="me-1">
                Configuraciones
            </RadzenButton>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="row mb-2">
            <div class="col-12">
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Configuración del Sistema</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6>Configuraciones</h6>
                                <p class="text-muted">Administra las configuraciones del sistema.</p>
                                <RadzenButton Click=@(() => NavigationManager.NavigateTo("/configuracion/config"))
                                           Icon="settings"
                                           ButtonStyle="ButtonStyle.Secondary"
                                           class="w-100">
                                    Ir a Configuraciones
                                </RadzenButton>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

